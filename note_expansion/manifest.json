{
    "name": "note_expansion",
    "description": "A simple note expansion tool",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "main.html"
    },
    "background": {
        "service_worker": "background.js"
    
    },
    "commands":{
        "open_extension": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q"
            },
            "description": "open the note expansion"
        },
        "save_note": {
            "suggested_key": {
                "default": "Ctrl+Shift+S"
            },
            "description": "save the note in other name"
        }
        
    }
    ,
    "permissions": ["storage"]
}